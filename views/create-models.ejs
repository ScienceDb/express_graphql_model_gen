'use strict';

module.exports = function(sequelize, DataTypes){
  var <%- name -%> = sequelize.define('<%- nameLc -%>',{
    <% for (var key in attributes) { %>
      <% let type_seq =  attributes[key] -%>
      <% if(type_seq === 'Int'){ type_seq = 'INTEGER' } -%>
      <%= key %>: {
          type: Sequelize.<%= type_seq.toUpperCase() %>
      },
    <% } %>
  });

  <%- name -%>.associate = function(models){
      <% for(let i=0; i < associations.length; i++){ -%>
        <%- name -%>.<%= associations[i].type %>(models.<%= associations[i].target.toLowerCase() -%>
        <% if(associations[i].type === 'belongsToMany'){ -%> ,{through : '<%= associations[i].cross_table -%>'}  <%} -%>);
      <% } -%>
  };

  return <%- name -%>;
};
