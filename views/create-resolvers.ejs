  delete<%- nameCp -%>: function({id}, context){
    return checkAuthorization(context, '<%- name -%>', 'delete').then( authorization =>{
      if (authorization === true) {
      return <%- nameLc -%>
        .findByPk(id)
        .then( <%- nameLc -%>_sqlz =>{

            if(<%- nameLc -%>_sqlz === null) return new Error(`Record with ID = ${id} not exist`);

            let err = validatorUtil.ifHasValidatorFunctionInvoke('validatorForDelete', <%- nameLc -%>, <%- nameLc -%>_sqlz);
            if (!!err) {
                return err;
            } else {
                return <%- nameLc -%>_sqlz
                .destroy()
                .then(()=>{return 'Item successfully deleted';});
            }
          });
        } else {
            return new Error("You don't have authorization to perform this action");
