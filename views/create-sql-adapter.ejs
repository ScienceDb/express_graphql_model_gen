  static countRecords(search){
    /**
      * Debug
      */
    console.log("-@@@------ adapter: (", this.adapterType, ") : ", this.adapterName, "\n- on: countRecords: search: ", search);
    let options = {};

    /*
     * Search conditions
     */
    if (search !== undefined) {
      
      //check
      if(typeof search !== 'object') {
        throw new Error('Illegal "search" argument type, it must be an object.');
