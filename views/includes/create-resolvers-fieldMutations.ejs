
<%# creates the field Mutations for adding/removing associated records %> 

<%for(let i=0; i < associations["to_many"].length; i++){-%>
  /**
  * <%- op %><%-associations["to_many"][i].name_cp-%> - field Mutation for to_many associations to <%- op %> 
  *
  * @param {object} input   Info of input Ids to <%- op %>  the association
  */
  <%- nameLc -%>.prototype.<%- op %><%-associations["to_many"][i].name_cp-%> = async function(input) {
    let results = [];
    input.<%- op %><%-associations["to_many"][i].name_cp-%>.forEach(associatedRecordId => {
      results.push(models.<%-associations["to_many"][i].target_lc-%>._<%- op %><%- nameCp -%> (associatedRecordId, input.<%- idAttribute %>));
    })
    await Promise.all(results);
  }
  
<%}-%>

<%for(let i=0; i < associations["to_one"].length; i++){-%>
  /**
  * <%- op %><%-associations["to_one"][i].name_cp-%> - field Mutation for to_one associations to <%- op %> 
  *
  * @param {object} input   Info of input Ids to <%- op %>  the association
  */
  <%- nameLc -%>.prototype.<%- op %><%-associations["to_one"][i].name_cp-%> = async function(input) {
    await <%- nameLc -%>._<%- op %><%-associations["to_one"][i].name_cp-%>(input.<%- idAttribute %> %>, input.<%- op %><%-associations["to_one"][i].name_cp-%>);
    this.<%-associations["to_one"][i].targetKey-%> = input.<%- op %><%-associations["to_one"][i].name_cp-%>;
  }
<%}-%>